{erl_opts, [debug_info]}.
{deps, [
  {eqwalizer_support,
  {git_subdir,
      "https://github.com/whatsapp/eqwalizer.git",
      {branch, "main"},
      "eqwalizer_support"}}
]}.

{src_dirs, ["src"]}.



{shell, [
  % {config, "config/sys.config"},
    {apps, [adamantum]}
]}.



{pre_hooks,
  [{"(linux|darwin|solaris)", compile, "make -C ecli/c_src"},
   {"(freebsd)", compile, "gmake -C ecli/c_src"}]}.
{post_hooks,
  [{"(linux|darwin|solaris)", clean, "make -C ecli/c_src clean"},
   {"(freebsd)", clean, "gmake -C ecli/c_src clean"}]}.